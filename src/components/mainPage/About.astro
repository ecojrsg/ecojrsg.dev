        new TypeIt(target, {
            startDelay: 1000,
        })
            .type("Soy eco", { delay: 300 })
            .move(-2, { delay: 100 })
            .delete(1)
            .type("E")
            .move(null, { to: "END", delay: 1000 })
            .type("ðŸ‘‹")
            .go();
    });
</script>
